## these ones do arithmetic with EDates and FDates as well
S3method(`+`, .duo)
S3method(`-`, .duo)
S3method(`*`, ddur)
S3method(`/`, ddur)
S3method(`%%`, ddur)

export(`%before%`)
export(`%before|on%`)
export(`%after%`)
export(`%after|on%`)
export(`%older.than%`)
export(`%younger.than%`)
S3method("<", .duo)
S3method("<=", .duo)
S3method(">", .duo)
S3method(">=", .duo)
S3method("!=", .duo)
S3method("==", .duo)
S3method("%before%", .duo)
S3method("%before|on%", .duo)
S3method("%after%", .duo)
S3method("%after|on%", .duo)
S3method("%older.than%", .duo)
S3method("%younger.than%", .duo)
export(oldest)
export(youngest)
