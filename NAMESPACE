export(as.ddur)
export(is.ddur)
S3method(as.ddur, character)
S3method(as.ddur, numeric)
S3method(as.ddur, ddur)
export(ddur)

S3method(format, ddur)
S3method(print, ddur)

S3method(c, ddur)
S3method(rev, ddur)
S3method(rep, ddur)
S3method(round, ddur)
S3method(unique, ddur)
S3method("[", ddur)

S3method(year, ddur)
export(year.ddur)
S3method(semi, ddur)
export(semi.ddur)
S3method(quarter, ddur)
export(quarter.ddur)
S3method(month, ddur)
export(month.ddur)
S3method(week, ddur)
export(week.ddur)
S3method(dday, ddur)
