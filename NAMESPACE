useDynLib(dateutils, .registration=TRUE)

import(methods)

export(year)
export(`year<-`)
export(yday)
export(`yday<-`)
export(semi)
export(sday)
export(quarter)
export(qday)
export(month)
export(`month<-`)
export(mday)
export(`mday<-`)
export(week)
export(wday)
export(dday)
S3method(year, default)
S3method(yday, default)
S3method(semi, default)
S3method(quarter, default)
S3method(month, default)
S3method(mday, default)
S3method(week, default)
S3method(wday, default)

export(as.EDate)
export(is.EDate)
S3method(as.Date, EDate)
export(as.IDate.EDate)
S3method(as.EDate, character)
S3method(as.EDate, integer)
S3method(as.EDate, Date)
S3method(as.EDate, IDate)
S3method(as.EDate, EDate)
S3method(as.EDate, POSIXct)
S3method(as.EDate, default)
S3method(as.POSIXlt, EDate)
S3method(as.POSIXct, EDate)

S3method(format, EDate)
S3method(print, EDate)

S3method(c, EDate)
S3method(rev, EDate)
S3method(cut, EDate)
S3method(mean, EDate)
S3method(rep, EDate)
S3method(round, EDate)
S3method(seq, EDate)
export(seq.EDate)
S3method(split, EDate)
S3method(unique, EDate)
S3method(min, EDate)
S3method(max, EDate)
S3method("[", EDate)

S3method(year, EDate)
export(year.EDate)
S3method(yday, EDate)
export(yday.EDate)
S3method(semi, EDate)
export(semi.EDate)
S3method(sday, EDate)
export(sday.EDate)
S3method(quarter, EDate)
export(quarter.EDate)
S3method(qday, EDate)
export(qday.EDate)
S3method(month, EDate)
export(month.EDate)
S3method(mday, EDate)
export(mday.EDate)
S3method(week, EDate)
export(week.EDate)
S3method(wday, EDate)
export(wday.EDate)
S3method(months, EDate)
S3method(weekdays, EDate)


